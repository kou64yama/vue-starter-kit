{
  "extends": ["tslint-config-airbnb", "tslint-config-prettier"],

  "rulesDirectory": ["tslint-plugin-prettier"],

  "rules": {
    // https://palantir.github.io/tslint/rules/variable-name/
    "variable-name": false,

    // https://github.com/Microsoft/tslint-microsoft-contrib#readme
    "function-name": false,

    // https://github.com/Microsoft/tslint-microsoft-contrib
    "import-name": false,

    // https://github.com/ikatyang/tslint-plugin-prettier#readme
    "prettier": true
  },

  "linterOptions": {
    "exclude": ["node_modules", "build", "*.json"]
  }
}
